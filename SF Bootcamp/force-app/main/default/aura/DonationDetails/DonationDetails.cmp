<aura:component >
    <aura:attribute name="donation" type="Donation__c" />
        
    <lightning:card title="{!v.donation.Donor_Name__c}" iconName="action:new_lead">
        
        <p class="slds-text-heading--medium slds-p-horizontal--small">
            Amount: <lightning:formattedNumber value="{!v.donation.Amount__c}" style="currency"/>
        </p>
        <p class="slds-text-heading--medium slds-p-horizontal--small">
            Date: <lightning:formattedDateTime value="{!v.donation.Donation_Date__c}" style="date"/>
        </p>
        <p class="slds-p-horizontal--small">
            Notes: {!v.donation.Note__c}
        </p>
    </lightning:card>
    
</aura:component>